<%= form_with(model: score) do |form| %>
  <% if score.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(score.errors.count, "error") %> prohibited this score from being saved:</h2>

      <ul>
        <% score.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :subject, style: "display: block" %>
    <%= form.text_field :subject %>
  </div>

  <div>
    <%= form.label :point, style: "display: block" %>
    <%= form.number_field :point %>
  </div>

  <div>
    <%= form.label :grade, style: "display: block" %>
    <%= form.text_field :grade %>
  </div>

  <div>
  <% if @from_student_id  %>
  <br>
  <%= form.label :query, "from student id: #{@from_student_id}"  , style: "display: block" %>
  <%= form.hidden_field :student_id, value:@from_student_id %>

  <% else %>
  <%= form.label :student_id, style: "display: block" %>
  <%= form.text_field :student_id %>
  <% end %>

  </div>
  
  
  <div>
    <%= form.submit %>
  </div>
<% end %>
